# Production environment secrets
# Copy this file and fill with your actual production values

# Hetzner Cloud API token
hetzner_token = "<<YOUR_HETZNER_API_TOKEN>>"
cloudflare_api_token = "<<YOUR_CLOUDFLARE_API_TOKEN>>" 
cloudflare_account_id = "<<YOUR_CLOUDFLARE_ACCOUNT_ID>>"

admin_username = "admin"
ssh_port = 22
# SSH public keys for server access
ssh_public_keys = [
  "ssh-ed25519 AAAAC3Nz....... you@domain.tld",
]

ssh_key_names = [
  "main-key",
]

home_ipv4 = "1.2.3.4"
home_server_ipv6 = "2a01::1"
home_ipv6_range = "2a01::/64"

extra_trusted_cidrs = [
  "1.2.3.0/28",         # Work IPv4
  "4.5.6.7/32"          # Holiday home
] # home_ipv4 and home_ipv6_range will be added automatically to trusted_cidrs
